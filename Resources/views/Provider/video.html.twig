<script src="//vjs.zencdn.net/4.6/video.js"></script>
<link href="//vjs.zencdn.net/4.6/video-js.css" rel="stylesheet">

<video id="video-player-{{ options.id }}" class="video-js vjs-default-skin vjs-big-play-centered"
       controls preload="metadata" width="100%" height="{% if options.height %}{{ 600 * options.height / options.width }}{% else %}420px{% endif %}"
       poster= "/uploads/media/{{ options.thumbnail.getKey() }}"
       data-setup='{"example_option":true}'>
    <source src="{{ options.file }}" type='video/mp4' />
</video>